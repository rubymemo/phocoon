{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^g-(.*)": "@/components/g-$1.vue",
			"^g-(.*)": "@/components/g-$1/index.vue"
		}
	},
	"pages": [

		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "登陆",
				"navigationStyle": "custom",
				"backgroundColor": "#ffffff"
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "微游-推广助手",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/myearnings/myearnings",
			"style": {
				"navigationBarTitleText": "微游-推广助手",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/channel/channel",
			"style": {
				"navigationBarTitleText": "微游-推广助手",
				"enablePullDownRefresh": false
			}
		},



		{
			"path": "pages/promotion/promotion",
			"style": {
				"navigationBarTitleText": "微游-推广助手",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#ffffff",
		"backgroundColor": "#ffffff",
		"app-plus": {
			"background": "#ffffff"
		}
	},
	"tabBar": {
		"custom": true,
		"color": "#7A7E83",
		"selectedColor": "#007AFF",
		"borderStyle": "black",
		"backgroundColor": "#F8F8F8",
		"fontSize": "12px",
		"spacing": "5px",
		"height": "50px",
		"list": [{
				"pagePath": "pages/home/home",
				"text": "合作游戏"
			},
			{
				"pagePath": "pages/channel/channel",
				"text": "渠道管理"
			},
			{
				"pagePath": "pages/promotion/promotion",
				"text": "推广数据"
			},

			{
				"pagePath": "pages/myearnings/myearnings",
				"text": "我的收益"
			}
		]
